<p id="notice"><%= notice %></p>

<h1>Stories</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Adress</th>
      <th>Comic</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.title %></td>
        <td><%= story.adress %></td>
        <td><%= story.comic_id %></td>
        <td><%= link_to 'Show', comic_story_path(story.comic_id, story.id) %></td>
        <td><%= link_to 'Edit', edit_comic_story_path(story.comic_id, story.id) %></td>
        <td><%= link_to 'Destroy', comic_story_path(story.comic_id, story.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_comic_story_path %>
