<h1>Profile</h1>

<table>
  <thead>
    <tr>
      <th>My comics</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user.comics.all.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%#= c.cover %></td>
        <td><%= c.description %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
