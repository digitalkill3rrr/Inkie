<div class="wrapper">
  <div class="section_title">
    <h1>My comics</h1>
  </div>


  <div class="comic_wrapper">
    <% @user.comics.each do |c| %>
      <div class="comic">
        <div class="comic_cover"><%= image_tag c.cover.url %></div>
        <div class="comic_title"><%= c.title %></div>

        <div class="comic_action_buttons">
          <div id="edit" class="edit_button">
            <% if can? :update, c %>
              <%= link_to 'Edit', edit_comic_path(c) %>
            <% end %>
          </div>

          <div id="destroy" class="button">
            <% if can? :destroy, c %>
              <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <br>

  <!-- # NOTE:  Create button -->
  <!-- <div id="create" class="button"> -->
    <%# if can? :create, Comic %>
      <%#= link_to 'New Comic', new_comic_path %>
    <%# end %>
  <!-- </div> -->
</div>
