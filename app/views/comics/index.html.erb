<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <!-- <th>Cover</th> -->
      <th>Creator</th>
      <th>Genre</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= link_to comic.title, comic %></td>
        <td><%= image_tag comic.cover.url, width: 100 %></td>
        <td><%= comic.user.nickname %></td>
        <td><%= comic.genre.title %></td>
        <td><%= comic.description %></td>
        <td>
          <% if can? :update, comic %>
            <%= link_to 'Edit', edit_comic_path(comic) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, comic %>
            <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Comic %>
  <%= link_to 'New Comic', new_comic_path %>
<% end %>
