<p id="notice"><%= notice %></p>

<h1>Comics</h1>

<table>
  <thead>
    <tr>
      <th>Cover</th>
      <th>Title</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comics.each do |comic| %>
      <tr>
        <td><%= comic.cover %></td>
        <td><%= link_to comic.title, comic %></td>
        <td><%= comic.genre %></td>
        <td>
          <% if can? :update, comic %>
            <%= link_to 'Edit', edit_comic_path(comic) %>
          <% end %>
        </td>

        <td>
          <% if can? :destroy, comic %>
            <%= link_to 'Destroy', comic, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

