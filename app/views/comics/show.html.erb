<div class="wrapper">

  <div class="header">
    <div id="comic_header">
      <div id="comic_page" class="comic_cover"><%= image_tag @comic.cover.url %></div>
      <div class="comic_info">
        <h1 class="comic_title"><%= @comic.title %></h1>
        <div id="comic_page" class="comic_author"><%= @comic.user.nickname %></div>
        <div id="comic_page_description" class="comic_description"><%= @comic.description %></div>

        <div class="read_button"><%= link_to 'Read comic',comic_story_path(0) %></div>
      </div>
    </div>
  </div>

  <div class="comic_wrapper">
    <!-- <div class="comic_cover"> -->
      <%#= image_tag(@comic.cover.url) if @comic.cover? %>
    <!-- </div> -->

    <div class="comic">

      <%# if can? :update, Comic %>
      <%#= link_to 'Edit', edit_comic_path(@comic) %>
      <%# end %>
    </div>
  </div>


  <%#= link_to 'Back', comics_path %>
</div>
