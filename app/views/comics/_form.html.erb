<div class="wrapper">


  <div class="header">

    <div class="comic container">
      <%= form_with(model: comic, local: true) do |form| %>
        <% if comic.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(comic.errors.count, "error") %> prohibited this comic from being saved:</h2>

          <ul>
            <% comic.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div id="comic_header">
        <div id="upload_comic_cover" class="comic_cover"><%= form.file_field :cover %></div>

        <div id="comic_info" class="comic_info">
          <h1 id="comic_info" class="comic_title"><%= form.text_field :title, :placeholder => 'Name your comic' %></h1>
          <div id="comic_info" class="comic_genre"><%= select("comic", "genre_id", Genre.all.collect {|g| [ g.title, g.id ] }) %></div>
          <div id="comic_page_description" class="comic_description"><%= form.text_area :description, :placeholder => 'Describe your comic in just 300 symbols. Good luck!', :maxlength => 300 %></div>

          <div class="actions">
            <div class="create_button"><%= form.submit %></div>
            <div class="back_button"><%= link_to 'Cancel', profile_index_path %></div>
          </div>
        </div>
      </div>
    </div>

  <% end %>
</div>
