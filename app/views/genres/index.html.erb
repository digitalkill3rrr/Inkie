<p id="notice"><%= notice %></p>

<h1>Genres</h1>

<table>
  <thead>
    <tr>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= link_to genre.title, genre %></td>
        <td>
          <% if can? :update, Genre %>
            <%= link_to 'Edit', edit_genre_path(genre) %>
          <% end %>
        </td>
        <td>
          <% if can? :destroy, Genre %>
            <%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Genre %>
  <%= link_to 'New Genre', new_genre_path %>
<% end %>
