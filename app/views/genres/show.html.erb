<div class="wrapper">

  <div class="header">
    <div id="collection_header">
      <div class="collection_container">
        <div class="genre_pic"><%= image_tag @genre.cover.url %></div>
        <h1 id="collection_h1"><%= @genre.title %></h1>
      </div>
    </div>
  </div>


  <div class="comic_wrapper">
    <div class="section_title">
      <h1>All comics</h1>
    </div>
    
    <% @genre.comics.each do |c| %>
      <div class="comic">
        <div class="comic_cover"><%= image_tag c.cover.url %></div>
        <div class="comic_title"><%= link_to c.title, c %></div>
        <div class="comic_author"><%= c.user.nickname %></div>
        <%#= c.description %>

        <%# if can? :update, c %>
          <%#= link_to 'Edit', edit_comic_path(c) %>
        <%# end %>

        <%# if can? :destroy, c %>
          <%#= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %>
        <%# end %>
      </div>
    <% end %>
  </div>


  <%#= link_to 'Edit', edit_genre_path(@genre) %>
  <%#= link_to 'Back', genres_path %>
</div>
