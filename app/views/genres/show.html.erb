<table>
  <tbody>
    <% @genre.comics.each do |c| %>
      <tr>
        <td><%= c.title %></td>
        <td><%= image_tag c.cover.url, width: 100 %></td>
        <td><%= c.description %></td>

        <td>
          <% if can? :update, c %>
            <%= link_to 'Edit', edit_comic_path(c) %>
          <% end %>
        </td>

        <td>
          <% if can? :destroy, c %>
            <%= link_to 'Destroy', c, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </td>
      </tr>
    <% end %>

    <h1><%= @genre.title %></h1>
  </tbody>
</table>

<br>


